    "open-coverage": "open ./coverage/index.html"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.3",
    "@types/pg": "^8.6.5",
    "@types/uuid": "^8.3.4",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "pg": "^8.7.3",
    "uuid": "^8.3.2"
  },
  "mocha": {
    "loader": "ts-node/esm",
    "recursive": true,
    "extensions": [
      "ts"
    ]
